<div id="fh5co-contact">
		<div class="container" id="contact_form" >
		<div style="margin-top: 10px;">
			<div class="row">
				<div class="col-md-5 col-md-push-1 animate-box">
					
					<div class="fh5co-contact-info">
						<h3>Contact Information</h3>
						<ul>
							<li class="address"><div id="fh5co-logo"><a href="#contact_telephone" title="Mail MS2I Informatique">MS2I<span>&nbsp;Informatique</span></a><br />Coeur d'Hérault<br />Béziers - Montpellier (Hérault)</div></li>
							<li class="phone" id="contact_telephone"><a href="tel://0668975638" title="Téléphone MS2I Informatique">06 68 97 56 38</a></li>
							<li class="email">noelmaurice4 [@] gmail.com</li>
							<li class="url"><a href="{{ path('index') }}" title="Site MS2I Informatique">http://ms2i.net</a></li>
						</ul>
					</div>

				</div>
				
				
				<div class="col-md-6 animate-box">
				
				{% for message in app.flashes('notice') %}
    			<div>
               		<h4 style="color: #d84949;"><strong>{{ message }}</strong></h4>
    			</div>
                {% endfor %}
				
					<h3>Contact :</h3>
					
					<form action="{{ path('contact') }}" method="POST">
						<div class="row form-group">
							<div class="col-md-12">
								<span class="formErrors">{{ form_errors(form.nom) }}</span>
								{{ form_widget(form.nom) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<span class="formErrors">{{ form_errors(form.mail) }}</span>
								{{ form_widget(form.mail) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<span class="formErrors">{{ form_errors(form.sujet) }}</span>
								{{ form_widget(form.sujet) }}
							</div>
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<span class="formErrors">{{ form_errors(form.message) }}</span>
								{{ form_widget(form.message) }}
							</div>
						</div>
						<div class="form-group">
							<!-- submit button -->
							{{ form_widget(form.submit) }}
						</div>
						
						<div>
						    {{ form_rest(form) }}
						</div>

					</form>		
				</div>
			</div>
		</div>	
		</div>
	</div>
	
	